<header ng-controller="HeaderController as ctrl" class="columns-container">
    <a ui-sref="home"><img src="app/images/np-header-w.png" alt="noir-pixel" /></a>
    <nav id="main-menu">
        <a ng-repeat="menuItem in ::ctrl.mainMenu" ui-sref="{{::menuItem.uri}}" ng-bind="::menuItem.text"></a>
    </nav>
    <nav id="auth-menu" ng-show="ctrl.login.authenticated !== undefined">
        <div ng-if="ctrl.login.authenticated === false" class="top-level sync-scale-in sync-fade-out">
            <a class="signin" ng-click="ctrl.signin()" ng-bind="::ctrl.signInMenu.signIn"></a>
        </div>
        <div ng-if="ctrl.login.authenticated" class="top-level sync-scale-in sync-fade-out">
            <div np-dropdown class="thumbnail">
                <div class="resizer">
                    <a><img np-img-cloak ng-src="{{ctrl.login.profileThumbnail}}" alt="{{ctrl.login.userName}}" /></a>
                </div>
                <ul np-dropdown-toggle class="dropdown scale-in-out" role="menu">
                    <li>
                        <a class="user-name" ng-bind="ctrl.login.userName"></a>
                    </li>
                    <li>
                        <a class="signout" ng-click="ctrl.signout()" ng-bind="::ctrl.signInMenu.signOut"></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>